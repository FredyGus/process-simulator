<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.simulator.ui.CompareController">

    <top>
        <ToolBar>
            <ToolBar>
                <Label text="A:"/>
                <Label fx:id="lblAlgA"/>
                <Label text="B:"/>
                <Label fx:id="lblAlgB"/>
                <Button fx:id="btnStartAmbos" text="Iniciar ambos" onAction="#onStartAmbos"/>
                <Button fx:id="btnPauseAmbos" text="Pausar ambos" onAction="#onPauseAmbos"/>
                <Button fx:id="btnStopAmbos" text="Detener ambos" onAction="#onStopAmbos"/>
                <Button text="Exportar A" onAction="#onExportA"/>
                <Button text="Exportar B" onAction="#onExportB"/>
                <Button text="Ver resumen A/B" onAction="#onShowResumenAB"/>
                <Button text="Exportar resumen A/B" onAction="#onExportResumenAB"/>
            </ToolBar>

        </ToolBar>
    </top>



    <center>
        <SplitPane dividerPositions="0.5">
            <TableView fx:id="tblA" contextMenu="$ctxA" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="colPidA"    text="PID"        prefWidth="60"/>
                    <TableColumn fx:id="colNomA"    text="Nombre"     prefWidth="120"/>
                    <TableColumn fx:id="colEstadoA" text="Estado"     prefWidth="100"/>
                    <TableColumn fx:id="colCpuA"    text="CPU%"       prefWidth="70"/>
                    <TableColumn fx:id="colMemA"    text="MEM (MB)"   prefWidth="90"/>
                    <TableColumn fx:id="colPrioA"   text="Prioridad"  prefWidth="80"/>
                    <TableColumn fx:id="colRafA"    text="Ráfaga"     prefWidth="80"/>
                </columns>
            </TableView>

            <TableView fx:id="tblB" contextMenu="$ctxB" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="colPidB"    text="PID"        prefWidth="60"/>
                    <TableColumn fx:id="colNomB"    text="Nombre"     prefWidth="120"/>
                    <TableColumn fx:id="colEstadoB" text="Estado"     prefWidth="100"/>
                    <TableColumn fx:id="colCpuB"    text="CPU%"       prefWidth="70"/>
                    <TableColumn fx:id="colMemB"    text="MEM (MB)"   prefWidth="90"/>
                    <TableColumn fx:id="colPrioB"   text="Prioridad"  prefWidth="80"/>
                    <TableColumn fx:id="colRafB"    text="Ráfaga"     prefWidth="80"/>
                </columns>
            </TableView>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="24.0" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Label fx:id="lblTickA"     text="Tick A: 0"/>
                <Label fx:id="lblActivosA"  text="Activos A: 0"/>
                <Separator orientation="VERTICAL"/>
                <Label fx:id="lblTickB"     text="Tick B: 0"/>
                <Label fx:id="lblActivosB"  text="Activos B: 0"/>
            </children>
        </HBox>

    </bottom>

    <!-- Definiciones NO visuales -->
    <fx:define>
        <ContextMenu fx:id="ctxA">
            <items>
                <MenuItem fx:id="miTerminarA"  text="Terminar"/>
                <MenuItem fx:id="miSuspenderA" text="Suspender"/>
                <MenuItem fx:id="miReanudarA"  text="Reanudar"/>
            </items>
        </ContextMenu>

        <ContextMenu fx:id="ctxB">
            <items>
                <MenuItem fx:id="miTerminarB"  text="Terminar"/>
                <MenuItem fx:id="miSuspenderB" text="Suspender"/>
                <MenuItem fx:id="miReanudarB"  text="Reanudar"/>
            </items>
        </ContextMenu>
    </fx:define>
</BorderPane>
