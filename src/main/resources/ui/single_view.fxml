<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.simulator.ui.SingleRunController" styleClass="app-root">

    <top>
        <ToolBar styleClass="toolbar-main">
            <Button fx:id="btnStart" text="Iniciar" onAction="#onStart"/>
            <Button fx:id="btnPause" text="Pausar" onAction="#onPauseResume"/>
            <Button fx:id="btnStop" text="Detener" onAction="#onStop"/>
            <Button fx:id="btnExport" text="Exportar métricas" onAction="#onExportMetrics"/>
            <Button text="Ver métricas" onAction="#onShowResumen"/>
            <Button text="Exportar resumen" onAction="#onExportResumen"/>
            <Button text="Ver gráfica" onAction="#onShowChart"/>
            <Button text="Ver evolución" onAction="#onShowEvolucion"/>
        </ToolBar>

    </top>


    <center>
        <TableView fx:id="tbl" contextMenu="$ctxMenu" prefHeight="420.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="colPid"    text="PID"       prefWidth="60"/>
                <TableColumn fx:id="colNom"    text="Nombre"    prefWidth="140"/>
                <TableColumn fx:id="colEstado" text="Estado"    prefWidth="110"/>
                <TableColumn fx:id="colCpu"    text="CPU%"      prefWidth="80"/>
                <TableColumn fx:id="colMem"    text="MEM (MB)"  prefWidth="100"/>
                <TableColumn fx:id="colPrio"   text="Prioridad" prefWidth="90"/>
                <TableColumn fx:id="colRaf"    text="Ráfaga"    prefWidth="90"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="24.0" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label fx:id="lblTick"    text="Tick: 0"/>
                <Label fx:id="lblActivos" text="Activos: 0"/>
            </children>
        </HBox>
    </bottom>

    <fx:define>
        <ContextMenu fx:id="ctxMenu">
            <items>
                <MenuItem fx:id="miTerminar"  text="Terminar"/>
                <MenuItem fx:id="miSuspender" text="Suspender"/>
                <MenuItem fx:id="miReanudar"  text="Reanudar"/>
            </items>
        </ContextMenu>
    </fx:define>

</BorderPane>
